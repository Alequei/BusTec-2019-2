<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".PrincipaAxtivity.HorariosFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:background="@drawable/horario1"
            android:layout_width="match_parent"
            android:layout_height="150dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/horario1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/hora1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circlehorario"
                        android:src="@drawable/ic_menu_horario"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorWhite"
                        android:text="Primer Horariro" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Turno: "
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="normal|bold" />
                <TextView
                 android:id="@+id/tiempo"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorWhite"
                android:text="MaÃ±ana" />
        </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="290dp"

                    android:text="07:00 A.m"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:background="@drawable/horario1"
            android:layout_width="match_parent"
            android:layout_height="150dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/horario2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circlehorario"
                        android:src="@drawable/ic_menu_horario"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorWhite"
                        android:text="Segundo horario" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Turno: "
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:id="@+id/tiempo2"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorWhite"
                        android:text="Tarde" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="290dp"

                    android:text="06:00 P.m"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:background="@drawable/horario1"
            android:layout_width="match_parent"
            android:layout_height="150dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/horario3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circlehorario"
                        android:src="@drawable/ic_menu_horario" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorWhite"
                        android:text="Tercer horario" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Turno: "
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:id="@+id/tiempo3"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorWhite"
                        android:text="Noche" />
                </LinearLayout>

                <TextView
                    android:id="@+id/hora3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="290dp"
                    android:text="09:40 P.m"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
</ScrollView>
</FrameLayout>